@using Microsoft.EntityFrameworkCore
@using System.Data
@inject AppDbContext dbContext
@{
    ViewData["Title"] = "Database";
    var connect = dbContext.Database.GetDbConnection();
    var dbName = connect.Database;
    var can_connect = dbContext.Database.CanConnect();
}
<p>@TempData["StatusMessage"]</p>
<h2>Connect database</h2>
<p>Database: @dbName</p>
<p>Source: @connect.DataSource</p>
<p>State: @connect.State</p>
<a class="btn btn-primary" asp-action="SeedData" asp-controller="DbManage" asp-area="Database">Seed
    Post Category</a>
<a class="btn btn-primary" asp-action="SeedProductCategory" asp-controller="DbManage" asp-area="Database">Seed
    Product Category</a>
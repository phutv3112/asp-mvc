@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_UserLayout";
}


<div class="container">
    <h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-9">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                    <label asp-for="Username" class="form-label"></label>
                <input asp-for="Username" class="form-control"  disabled />
                
            </div>
            <div class="form-floating mb-3">
                    <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control"  disabled />
               
            </div>
            <div class="form-floating mb-3">
                    <label asp-for="Input.PhoneNumber" class="form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number."/>
                
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <label asp-for="Input.FullName" class="form-label"></label>
                <input asp-for="Input.FullName" class="form-control" placeholder="Please enter your full name." />
                
                <span asp-validation-for="Input.FullName" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <label asp-for="Input.HomeAddress" class="form-label"></label>
                <textarea asp-for="Input.HomeAddress" class="form-control"
                          placeholder="Please enter your home address."></textarea>
                
                <span asp-validation-for="Input.HomeAddress" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                    <label asp-for="Input.DateOfBirth" class="form-label"></label>
                <input asp-for="Input.DateOfBirth" class="form-control"
                       placeholder="Please enter your date of birth." />
                
                <span asp-validation-for="Input.DateOfBirth" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </form>
    </div>
</div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
